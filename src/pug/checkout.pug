extends common/layout

block content 
    .holder_short_started
        +breadCrumb ('Checkout', breadCrumbs)
        ul.checkout-list
            li.checkout-item
                h6.list-title Billing Details
                form.form_custom(action="#")
                    ul.billing-details-list     
                        li.billing-details-item_short 
                            label.label_checkout 
                                span First Name 
                                span *
                            input.input_custom.input_checkout(type="code" required='true')
                        li.billing-details-item_short 
                            label.label_checkout 
                                span Last Name 
                                span *
                            input.input_custom.input_checkout(type="code" required='true')
                        li.billing-details-item 
                            .label_checkout
                                span Country
